---
import Layout from "@layouts/Layout.astro";
import unauthorizedIllustration from "@assets/ilustraciones/unauthorized.svg";
import NavHeader from "@shared/components/NavHeader/NavHeader.astro";
import { Button } from "@shared/components";
import { ArrowBackIcon } from "@shared/iconos";
---

<Layout>
    <NavHeader />
    <div class="container mainContainer">
        <img src={unauthorizedIllustration.src} alt="Acceso no autorizado" />
        <div class="text">
            <h1>No tienes permiso para acceder a esta página</h1>
            <p>Lo sentimos, no tienes los permisos necesarios para acceder a esta página.</p>
            <a href="/">
                <Button>
                    Ir al inicio
                    <ArrowBackIcon />
                </Button>
            </a>
        </div>
    </div>
</Layout>
<style>
    .mainContainer {
        display: flex;
        align-items: center;
        gap: 2rem;
        height: 80vh;
    }

    h1 {
        font-size: 3rem;
        font-weight: 700;
        color: var(--color-primario);
        margin-bottom: 1rem;
    }

    p {
        font-size: 1.5rem;
        margin-bottom: 2rem;
    }

    img {
        max-width: 45%;
        height: auto;
    }

    a {
        text-decoration: none;
    }
</style>