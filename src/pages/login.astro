---
import Layout from '../layouts/Layout.astro';
import logo from '../../public/assets/logo/logo-light.svg';
import fondoimg from '../../public/assets/ilustraciones/loginIlustracion.svg';

---
<Layout title="Login">
  <section>
    <article class="bienvenidos">
      <h2>Bienvenidos</h2>
      <h3>Ingresa tus credenciales</h3>
      <div class="decoracion">
       <div class="linea-1"></div> 
       <div class="circulo"></div> 
       <div class="linea-2"></div>
      </div>  
       <!-- Agregamos una clase decoracion para darle estilo al div -->
      <form action="">
        <label for=""> Nombre de Usuario
          <input type="text" placeholder="Nombre de Usuario">
        </label>
        <label for=""> Contraseña
          <input type="text" placeholder="Contraseña">
        </label>
        <button>Ingresar</button>
        <a href="">Olvidaste tu Contraseña?</a>
      </form>
    </article>
    <article class="fondo">
      <img src={logo.src} alt="Logo de la empresa"  class="Logo"/>
      <img src={fondoimg.src} alt="fondo" class="ilustracion"/>
    </article>
    
  </section>
</Layout>
<style>
  section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
    
  }
  article.bienvenidos {
    width: 50%;
    height: 400px;
    padding: 0 10%;
  }
  h2 {
    font-size: 30px;
    font-weight: 700;
    color: #333;
    text-align: center;
  }
  h3 {
    font-size: 15px;
    font-weight: 500;
    color: #333;
    text-align: center;
    margin-bottom: 15px;
  }
  form {
    margin-top: 30px;
    margin: 0 67px;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    height: 285px;
    
  }
  label {
    display: flex;
    flex-direction: column;
    font-size: 15px;
    margin: 5px 30px;
  }
  input {
    padding: 0.5rem;
    border: 1px solid #333;
    border-radius: 5px;
    width: 390px;
    
  }
  button {
    margin: 20px 180px;
    border: none;
    font-size: 15px;
    border-radius: 10px;
    background-color: #1F5C99;
    color: #fff;
    cursor: pointer;
    padding: 7px 14px;
  }
  a {
    text-align: center;
    color: #55AAFF;
    text-decoration: none;
  }
  .linea-1 {
    width: 200px;
    height: 2px;
    border: 1px solid #1F5C99;
  }
  .linea-2 {
    width: 200px;
    height: 2px;
    border: 1px solid #1F5C99;
    
  }
  .circulo {
    width: 9px;
    height: 9px;
    border-radius: 50%;
    background-color: #1F5C99;
    margin: 0 15px;
  }
  .decoracion {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 50px;
  }
  .fondo {
    background-color: #1F5C99;
    height: 100%;
    width: 60%;
  }
  .Logo {
    width: 500px;
    height: 230px;
    margin: 0 auto;
    display: block;
    margin-bottom: 105px;
    margin-top: 50px;
  }
  .ilustracion {
    width: 760px;
    height: 555px;
    display: block;
    margin-top: 0;
    margin-left: 150px;
  }

</style>