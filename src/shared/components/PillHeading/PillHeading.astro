---
const {variant} = Astro.props
---
<div class={`pillHeading ${variant}`}>
    <slot />
</div>

<style is:global>
    .pillHeading{
        padding: .4em 1em;
        font-weight: 700;
        border-radius: 30px;
        border: 3px solid;
        font-size: 2rem;
        text-align: center;
        width: fit-content;
    }

    h1, h2, h3{
        font-size: inherit;
        font-weight: inherit;
        margin: 0;
    }

    .pillHeading.primary{
        background: var(--color-primario);
        color: white;
    }

    .pillHeading.secondary{
        background: #81bfff;
        color: white;
    }

.pillHeading.grey{
    color: #6e6e6e
}
</style>
